# StyleAI+ Environment Variables Example
# Copy this file to .env and fill in your actual values

# Grok API Key (xAI) - OPTIONAL
# Get your API key from: https://console.x.ai/
XAI_API_KEY=xai-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Alternative: Google AI Studio API Key (Gemini) - OPTIONAL
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=AIzaSyXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# AI Provider Selection (grok or gemini or none)
# Leave empty or set to 'none' to use built-in recommendations
AI_PROVIDER=none

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True

# Upload Configuration
MAX_UPLOAD_SIZE=5242880
ALLOWED_EXTENSIONS=jpg,jpeg,png,webp

# Database (if needed later)
DATABASE_URL=sqlite:///styleai.db
